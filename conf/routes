# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           @controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               @controllers.Assets.versioned(path="/public", file: Asset)


GET         /apartmani              @controllers.Apartments.renderApartment()
POST        /apartmani              @controllers.Apartments.createApartment()
GET         /apartman               @controllers.Apartments.apartment()

#Login
GET         /adminsnd               @controllers.Login.loginIndex()
POST        /adminsnd               @controllers.Login.login()
